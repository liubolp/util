extends ../../common/layout/layout
block append meta
  title 每日一听
block script
block footer
block footerCss
block footerJs
  script(src='./js/daily.js')
block localCss
  link(rel='stylesheet' href='./css/daily.css')
  // 解决iOS自动播放
  script.
    //必须在微信Weixin JSAPI的WeixinJSBridgeReady才能生效
    document.addEventListener("WeixinJSBridgeReady", function () {
      document.getElementById('audio').play();
    }, false)
block content
  include component/navbar/navbar
  + nav('daily')
  div#daily
    div.audio-box
      img.avatar(src='./images/tupian.png')
      div.personal
        p
          span.name Scott
          span.title 董事长
        p.company 传播正能量，我已连续早起
          span.count 5
          | 天
      span.toggle.pause
        audio#audio(src='http://web.lm720.com/upload/careershow/2017/11/49/music.mp3' preload='auto' autoplay="autoplay" loop='loop' hidden='hidden' controls='controls')
    div.img-box
      article 这里是抓取的文章内容
      div.qr-box
        img.qr(src='./images/tupian.png')
        p 查看更多，请关注链脉
      div.statistics
        div.read
          span 阅读
          span 10000
        // 已点赞时加上agree这个类
        div.zan
          span.nav-icon &#xe658
          span 5000
        div.complaint
          span 投诉
          span
      div.convert 换成我的
    div.divider
    p.message
      a(href='./message.html') 写留言
        i.nav-icon &#xe69e
    ul.list
      -for(var i=0;i<5;i++)
        li
          a(href='javascript:;')
            img(src='./images/reward.png')
          div.content
            p.name Scott
            p.desc 今天是个好日子
            p.time 昨天
          div.zan
            span
              i.nav-icon &#xe658
              | 9999
    // 日听库
    a(href='daily-library.html').library 日听库
  // 打赏框
  include component/modal-reward/index
  // 换成我的弹框
  include component/follow/index
  // 投诉建议
  include component/modal-complaint/index
