extends ../../common/layout/layout
block append meta
  title 基础资料
block localCss
  link(rel='stylesheet' href='./css/identity.css')
block script
block footerJs
  script(src='./js/identity.js')
block footer
block footerCss
block content
  header.header-fixed
    a(href='identity.html').base.current
      p
        i.star
        span 基本资料
      p
        small 14/14
    a(href='demand-supply.html').business
      p
        i.star
        span 供需信息
      p
        small 3/3
    a(href='details.html').details
      p
        i.star
        span 详细资料
      p
        small 4/4
  p.tips 完善基本资料，开启名片营销推广之旅
  // 信息列表
  form.personal
    div.title
      i.info-icon &#xe613
      | 个人信息
    div.item
      span.name 头像
      input(name='avatar' type='button')
      div.img-box
        img(src='images/vip.png')
        // 没有图片时显示
        //div.add
      i.arrow
    div.item
      span.name 微信二维码
      input(name='qr' type='button')
      div.img-box
        img(src='images/vip.png')
        // 没有图片时显示
        div.add
      i.arrow
    div.item
      span.name.required 姓名
      input(name='name' placeholder='请输入您的姓名')
      i.arrow
    div.item
      span.name.required 性别
      select(name='gender')
        option(value='0') 保密
        option(value='1') 男
        option(value='2') 女
    div.item
      span.name 生日
      input.disabled(name='birthday' value='请选择生日' type='button')
      select(name='birthday-type')
        option(value='1') 公历
        option(value='2') 农历
  // 联系信息
  form.concat
    div.title
      i.info-icon &#xe645
      | 联系信息
    div.item
      span.name.required 手机
      input(name='phone' type='tel' placeholder='请输入您的手机号')
      i.arrow
    div.item
      span.name 座机
      input(name='tel' type='tel' placeholder='请输入您的的座机号')
      i.arrow
    div.item
      span.name 邮箱
      input(name='email' type='email' placeholder='请输入您的邮箱')
      i.arrow
    div.item
      span.name QQ
      input(name='qq' type='number' placeholder='请输入您的QQ号')
      i.info-icon.qq &#xe612
    div.item
      span.name 微信
      input(name='wechat'  placeholder='请输入您的微信号')
      i.info-icon.wechat &#xe66a
  // 企业信息
  form.company
    div.title
      i.info-icon &#xe61a
      | 企业信息
    div.item
      span.name.required 行业
      input(name='category' placeholder='请输入您的行业')
      i.arrow
    div.item
      span.name 职位
      input(name='post' placeholder='请输入职位')
      i.arrow
    div.item
      span.name 公司
      input(name='company' placeholder='请输入您的公司名称')
      i.arrow
    div.item
      span.name 网站
      input(name='website' placeholder='请输入您的网址')
      i.arrow
    div.item
      span.name 公司地址
      input(name='address' placeholder='请输入您的公司地址')
      i.arrow
  // 保存
  button.submit 保存
