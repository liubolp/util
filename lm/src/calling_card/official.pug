extends ../../common/layout/layout
block append meta
  title 名片复制
block localCss
  link(rel='stylesheet' href='./css/official.css')
block footerJs
block content
  header.header-box
    div.tpl__select
      a(href='/calling_card') 用户名片
      a(href='javascript:;').tpl__select-active 官方模板
    div.tpl__header
      div.tpl__header__search
        input#search(placeholder='请输入个人电话或名称' type='text')
        i.icon.iconfont &#xe662
      div.tpl__header__button
        button.button 搜索
  div.modal-template
    - var keys = ['A','B','C','D','E','F']
    ul.type-list
      -for(var i=0; i < 10; i++)
        li(class={active: i===1}) 类别
    div.container
      div.banner
        img(src='./images/tupian.png')
      ul.outer-list
        each key in keys
          li(id=`lm-${key}`)
            h3.type-title=key
            ul.subtype-list
              -for(var n=0; n < 7; n++)
                li
                  a.link(href='javascript:;')
                    img(src='./images/tupian.png')
                    p.child-type 乐美佳
    ul.nav-bar
      each key in keys
        li
          a(href=`#lm-${key}` class={current: key == 'B'})=key
